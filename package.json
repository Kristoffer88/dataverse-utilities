{
  "name": "dataverse-utilities",
  "version": "1.0.2",
  "description": "TypeScript types and testing utilities for Microsoft Dataverse",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./testing": {
      "import": {
        "types": "./dist/testing/index.d.ts",
        "default": "./dist/testing/index.js"
      },
      "require": {
        "types": "./dist/testing/index.d.cts",
        "default": "./dist/testing/index.cjs"
      },
      "default": "./dist/testing/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "testing": [
        "./dist/testing/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage",
    "test:integration": "RUN_INTEGRATION_TESTS=1 vitest --run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dataverse",
    "utilities",
    "typescript"
  ],
  "author": "kristoffer88",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.0.14",
    "@types/validator": "^13.15.2",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@azure/identity": "^4.10.2",
    "validator": "^13.15.15"
  }
}
